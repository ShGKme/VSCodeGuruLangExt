{
    "Guru Rule Set Template": {
        "prefix": "Guru",
        "body": [
            "GOAL: ${1:goal}",
            "",
            "INITIAL:",
            "\t${2:initial}",
            "",
            "DO:",
            "\t${3:do}",
            "",
            "END:"
        ],
        "description": "Basic template for Guru rule set"
    },
    "Guru Rule": {
        "prefix": "Rule",
        "body": [
            "RULE: ${1:ruleName}",
            "\tIF: ${2:condition}",
            "\tTHEN: ${3:then}",
            "\tCHANGES: ${4:changes}",
	        "\tREASON: ${5:reason}",
            ""
        ],
        "description": "Add a new rule"
    },
    "Guru Var": {
        "prefix": "Var",
        "body": [
            "VAR: ${1:name}",
            "\tFIND:",
            "\t\t${2:find}",
            "\tLABEL: ${3:label}"
        ],
        "description": "Add a new simple Var"
    },
    "Guru Var from GETFORM": {
        "prefix": "VarForm",
        "body": [
            "VAR: ${1:name}",
            "\tFIND:",
            "\t\tLOAD ${2:FormName}",
            "\t\tPUTFORM ${2:FormName}",
            "\t\tGETFORM ${2:FormName}",
            "\t\tRELEASE ${2:FormName}",
            "\tLABEL: ${3:label}"
        ],
        "description": "Add a new simple Var with GETFORM"
    },
    "Guru Var from PROC1": {
        "prefix": "VarProc",
        "body": [
            "VAR: ${1:name}",
            "\tFIND: PERFORM PROC1 USING \"${2:FormName}\",\"${3:QuestionNumber}\",\"${1:name}\",\"${4:AnswersCount}\"",
            "\tLABEL: ${5:label}"
        ],
        "description": "Add a new simple Var using Proc1"
    },
    "Guru Var from PGETFDB": {
        "prefix": "VarPGETFDB",
        "body": [
            "VAR: ${1:name}",
            "\tFIND: PERFORM PGETFDB USING \"${1:name}\",\"$(2:FormName}\",\"${3:FormErr}\",\"${4:QustionNum}\",\"${5:AnswersCount}\"",
            "\tLABEL: ${6:label}"
        ],
        "description": "Add a new simple var using PGETFDB"
    }
}